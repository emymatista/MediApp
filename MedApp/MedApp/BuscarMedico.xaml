        <StackLayout Padding="40" VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <Label Text="Busqueda de informacion del Medico" FontSize="22" FontFamily="MavenPro" TextColor="Beige"></Label>
            <Entry Placeholder="Nombre del medico" x:Name="SearchEntry" />
            <Picker Title="Especialidad">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Pediatria</x:String>
                        <x:String>Gastroenterologia</x:String>
                        <x:String>Ortopedia</x:String>
                        <x:String>Medicina Familiar</x:String>
                        <x:String>Ginecologia</x:String>
                        <x:String>Estomatologia</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Button Text="Buscar" 
                    Clicked="Button_Clicked"
                    TextColor="White"
                    BackgroundColor="Transparent"
                    BorderColor="Aqua"
                    BorderWidth="1.5"
                    CornerRadius="50"/>
            
